<h1>Your Cart</h1>

<table>
  <thead>
    <tr>
      <th>Product Name</th>
      <th>Quantity</th>
      <!-- Add other cart item attributes if needed -->
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.product.name %></td>
        <td><%= cart_item.quantity %></td>
        <td><%= button_to 'Delete', cart_item_path(cart_item), method: :delete, class: 'btn btn-danger' %></td>

        <!-- Add other cart item attributes if needed -->
      </tr>
    <% end %>
  </tbody>
</table>
<h2>Add Product to Cart</h2>
<%= link_to 'Add Product', new_cart_path, class: "mt-4 bg-gray-500 text-white font-bold px-4 py-2 rounded hover:bg-gray-600 transition-colors duration-300" %>


