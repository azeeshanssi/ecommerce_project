<h1 class="text-4xl font-bold text-gray-800">All Categories</h1>

<table class="mt-4 w-full border-collapse">
  <thead>
    <tr>
      <th class="text-xl px-4 py-2 border">Name</th>
      <th class="text-xl px-4 py-2 border">Description</th>
      <th class="text-xl px-4 py-2 border">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td class="text-xl px-4 py-2 border"><%= category.name %></td>
        <td class="text-xl px-4 py-2 border"><%= category.description %></td>
        <td class="px-4 py-2 border flex">
          <%= link_to 'View Products', category_products_path(category), class: 'px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors duration-300' %>
          <%if policy(category).edit?%>
          <%= link_to 'Edit', edit_category_path(category), class: 'ml-2 px-4 py-2 bg-green-500 text-white rounded-md hover:bg-green-600 transition-colors duration-300' %>
          <%end%>
          <%if policy(category).destroy?%>
          <%= form_with(model: category, url: category_path(category), method: :delete, data: { confirm: 'Are you sure you want to delete this category?' }) do |form| %>
            <%= form.submit 'Delete', class: 'ml-2 px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-600 transition-colors duration-300' %>
          <%end%>
          <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="mt-4">
  <%if policy(Category).create?%>
  <%= link_to 'Add Category', new_category_path, class: 'px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-indigo-600 transition-colors duration-300' %>
  <%end%>
</div>

