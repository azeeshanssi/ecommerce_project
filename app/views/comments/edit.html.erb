<h1 class="text-4xl font-bold text-gray-800">Edit Comment</h1>

<%= form_with(model: [@category, @product, @comment], url: category_product_comment_path(@category, @product, @comment), method: :patch, html: { class: "mt-4" }) do |form| %>
  <div class="mt-4">
    <%= form.label :comment, class: "block font-semibold text-gray-800" %>
    <%= form.text_area :content, class: "form-input mt-1 block w-full" %>
  </div>
  <div class="mt-4">
    <%= form.submit 'Update Comment', class: "bg-blue-500 text-white font-bold px-4 py-2 rounded hover:bg-blue-600 transition-colors duration-300" %>
  </div>
<% end %>

<%= link_to 'Back to Product', category_product_path(@category, @product), class: "mt-4 bg-gray-500 text-white font-bold px-4 py-2 rounded hover:bg-gray-600 transition-colors duration-300" %>
