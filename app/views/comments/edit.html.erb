<h1>Edit Comment</h1>

<%= form_with(model: [@category, @product, @comment], url: category_product_comment_path(@category, @product, @comment), method: :patch) do |form| %>
  <div>
    <%= form.label :comment %>
    <%= form.text_area :content %>
  </div>
  <div>
    <%= form.submit 'Update Comment' %>
  </div>
<% end %>

<%= link_to 'Back to Product', category_product_path(@category, @product) %>