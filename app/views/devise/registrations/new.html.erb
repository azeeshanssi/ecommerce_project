<h2 class="text-2xl font-bold">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "mt-4"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :name, class: "block font-semibold mb-1" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-full px-4 py-2 border rounded-md" %>
  </div>

  <div class="mb-4">
    <%= f.label :email, class: "block font-semibold mb-1" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded-md" %>
  </div>

  <div class="mb-4">
    <%= f.label :user_type, class: "block font-semibold mb-1" %>
    <%= f.select :user_type, options_for_select(User::USER_TYPES), prompt: "Select User Type", class: "w-full px-4 py-2 border rounded-md" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block font-semibold mb-1" %>
    <% if @minimum_password_length %>
      <em class="text-sm text-gray-600">(Minimum <%= @minimum_password_length %> characters)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-md" %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, class: "block font-semibold mb-1" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-md" %>
  </div>

  <div class="text-center">
    <%= f.submit "Sign up", class: "px-6 py-3 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors duration-300" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
