<h2 class="text-2xl font-bold">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "mt-4"}) do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block font-semibold mb-1" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded-md" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block font-semibold mb-1" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border rounded-md" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-4 flex items-center">
      <%= f.check_box :remember_me, class: "mr-2" %>
      <%= f.label :remember_me, class: "select-none" %>
    </div>
  <% end %>

  <div class="text-center">
    <%= f.submit "Log in", class: "px-6 py-3 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors duration-300" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
