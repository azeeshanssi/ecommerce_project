<h1 class="text-4xl font-bold text-gray-800 mb-4">Update Product</h1>

<%= form_with(model: [@category, @product]) do |form| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2 class="text-red-500"><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul class="text-red-500">
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-4">
    <%= form.label :name, class: "block text-xl font-medium text-gray-800" %>
    <%= form.text_field :name, class: "form-input mt-1 block w-full rounded-md border-gray-300" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "block text-xl font-medium text-gray-800" %>
    <%= form.text_area :description, class: "form-textarea mt-1 block w-full rounded-md border-gray-300" %>
  </div>

  <div class="actions">
    <%= form.submit "Update Product", class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors duration-300" %>
  </div>
<% end %>
